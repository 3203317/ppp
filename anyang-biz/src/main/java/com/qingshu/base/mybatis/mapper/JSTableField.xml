<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JSTableField">
	<resultMap type="JSTableField" id="jSTableFieldResultMap">
		<result property="id" column="id" />
	</resultMap>
	
	<sql id="table_columns">
		id,fieldName,fieldType,fieldLength,pojoName,isLogField,tableName,fieldDesc
    </sql>
	<sql id="entity_properties">
		#{id,jdbcType=VARCHAR},#{fieldName,jdbcType=VARCHAR},#{fieldType,jdbcType=VARCHAR},#{fieldLength,jdbcType=INTEGER},#{pojoName,jdbcType=VARCHAR},#{isLogField,jdbcType=INTEGER},#{tableName,jdbcType=VARCHAR},#{fieldDesc,jdbcType=VARCHAR}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="JSTableField">
		insert into j_s_tablefield( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	<!-- 批量保存对象 oracle需要将separator由,改为union all, 去掉values-->
	<insert id="batchInsert" parameterType="list">
		insert into
		j_s_tablefield
		(
		<include refid="table_columns" />
		)
		<foreach collection="list" item="item" index="index" separator="union all">
			select #{item.id},#{item.fieldName},#{item.fieldType},#{item.fieldLength},#{item.pojoName},#{item.isLogField},#{item.tableName},#{item.fieldDesc} from dual
		</foreach>
	</insert>
	<delete id="deleteByIds">
		delete from j_s_tablefield
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<delete id="deleteAll">
		delete from j_s_tablefield
	</delete>
	<update id="update" parameterType="JSTableField">
		update j_s_log 
		<trim prefix="set" suffixOverrides=",">
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="jSTableFieldResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from j_s_tablefield
		where id = #{id}
	</select>
	<select id="findByTableName" resultMap="jSTableFieldResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from j_s_tablefield
		where tableName = #{tableName} and isLogField=1
	</select>
	<select id="queryAll" resultMap="jSTableFieldResultMap">
		select <include refid="table_columns" /> 
		from j_s_tablefield
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
		</trim>
	</sql>
	
	<!-- 获取对象列表(分页)-->
	<select id="pagerList" resultMap="jSTableFieldResultMap" parameterType="PagerInfo">
		select <include refid="table_columns" />
		from j_s_tablefield
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>
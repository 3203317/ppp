<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JSMessageReceiver">
	<resultMap type="JSMessageReceiver" id="jSMessageReceiverResultMap">
		<result property="id" column="id" />
		<association property="receiverUser" column="receiverUserId" javaType="JSUser" select="JSUser.findById" />
		<association property="jsMessage" column="messageId" javaType="JSMessage" select="JSMessage.findById" />
	</resultMap>
	
	<sql id="table_columns">
		id,receiverUserId,messageId,receiverTime,status
    </sql>
    <sql id="table_columnsas">
		jsmr.id,jsmr.receiverUserId,jsmr.messageId,jsmr.receiverTime,jsmr.status
    </sql>
	<sql id="entity_properties">
		#{id},#{receiverUser.id},#{jsMessage.id},#{receiverTime,jdbcType=TIMESTAMP},#{status}
	</sql>
	<sql id="tableasname"> j_s_message_receiver jsmr</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="JSMessageReceiver">
		insert into j_s_message_receiver( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	<!-- 批量保存对象 -->
	<insert id="batchInsert" parameterType="list">
		insert into
		j_s_message_receiver
		(
		<include refid="table_columns" />
		)
		<foreach collection="list" item="item" index="index"
			separator="union all">
			select #{item.id},#{item.receiverUser.id},#{item.jsMessage.id},#{item.receiverTime},#{item.status} from dual
		</foreach>
	</insert>
	<delete id="deleteByIds">
		delete from j_s_message_receiver
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<delete id="delete">
		delete from j_s_message_receiver
		where id=#{id}
	</delete>
	<delete id="deleteAll">
		delete from j_s_message_receiver
	</delete>
	<update id="update" parameterType="JSMessageReceiver">
		update j_s_message_receiver 
		set status= #{status}
		<where>id = #{id}</where>
	</update>
	<!-- 修改记录状态 -->
	<update id="updateStatus" parameterType="map">
		update j_s_message_receiver set status=#{status}
		where id in
		<foreach item="item" collection="ids" open="(" separator="," close=")">
			#{item}
		</foreach>
	</update>
	<!-- 获取符合条件的信息条数(根据登录人) -->
	<select id="count" resultType="int" parameterType="map" >
		select count(*)
		from j_s_message_receiver jsm
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="userId != null">and receiverUserId = #{userId}</if>
			<if test="status != null">and status = #{status}</if>
			<if test="notstatus != null">and status != #{notstatus}</if>
		</trim>
	</select>
	<!-- 获取符合条件的信息(根据登录人) -->
	<select id="findByUserId" resultMap="jSMessageReceiverResultMap" parameterType="map" >
		select <include refid="table_columns" />
		from j_s_message_receiver jsm
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="userId != null">and receiverUserId = #{userId}</if>
			<if test="status != null">and status = #{status}</if>
		</trim>
	</select>
	<select id="findById" resultMap="jSMessageReceiverResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from j_s_message_receiver
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="jSMessageReceiverResultMap">
		select <include refid="table_columns" /> 
		from j_s_message_receiver
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			
		</trim>
	</sql>
	
	<!-- 获取对象列表(分页)-->
	<select id="pagerList" resultMap="jSMessageReceiverResultMap" parameterType="PagerInfo">
		select <include refid="table_columnsas" />
		from <include refid="tableasname" />
		left join j_s_message jsm
		on jsmr.messageId=jsm.id
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>
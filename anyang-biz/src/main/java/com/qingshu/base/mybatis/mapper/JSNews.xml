<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JSNews">
	<resultMap type="JSNews" id="jSNewsResultMap">
		<result property="id" column="id" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		title,
		href,
		type,
		createDate
    </sql>
	<sql id="entity_properties">
		#{id},
		#{title},
		#{href},
		#{type},
		#{createDate,jdbcType=DATE}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="JSNews" useGeneratedKeys="true" keyProperty="id">
		insert into j_s_news( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	<!-- 批量保存对象 -->
	<insert id="batchInsert" parameterType="list">
		insert into
		j_s_news
		(
		<include refid="table_columns" />
		)
		<foreach collection="list" item="item" index="index"
			separator="union all">
			select #{item.id},#{item.title},#{item.href},#{item.type},#{item.createDate} from dual
		</foreach>
	</insert>
	<delete id="deleteByIds">
		delete from j_s_news
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<delete id="deleteAll">
		delete from j_s_news
	</delete>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="title != null and title != ''">and title = #{title}</if>
		</trim>
	</sql>
	
	<!-- 获取对象列表(分页)-->
	<select id="pagerList" resultMap="jSNewsResultMap" parameterType="PagerInfo">
		select <include refid="table_columns" />
		from j_s_news
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>
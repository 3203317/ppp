<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JSMessageSend">
	<resultMap type="JSMessageSend" id="jSMessageSendResultMap">
		<result property="id" column="id" />
		<association property="sendUser" column="sendUserId" javaType="JSUser" select="JSUser.findById" />
		<association property="jsMessage" column="messageId" javaType="JSMessage" select="JSMessage.findById" />
	</resultMap>
	
	<sql id="table_columns">
		id,sendUserId,messageId,sendTime,status
    </sql>
    <sql id="table_columnsas">
		jsms.id,jsms.sendUserId,jsms.messageId,jsms.sendTime,jsms.status
    </sql>
	<sql id="entity_properties">
		#{id},#{sendUser.id},#{jsMessage.id},#{sendTime,jdbcType=TIMESTAMP},#{status}
	</sql>
	<sql id="tableasname"> j_s_message_send jsms</sql>
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="JSMessageSend">
		insert into j_s_message_send( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	<!-- 批量保存对象 -->
	<insert id="batchInsert" parameterType="list">
		insert into
		j_s_message_send
		(
		<include refid="table_columns" />
		)
		<foreach collection="list" item="item" index="index"
			separator="union all">
			select #{item.id},#{item.sendUser.id},#{item.jsMessage.id},#{item.sendTime},#{item.status} from dual
		</foreach>
	</insert>
	<delete id="deleteByIds">
		delete from j_s_message_send
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<delete id="delete">
		delete from j_s_message_send where id=#{id}
	</delete>
	<delete id="deleteAll">
		delete from j_s_message_send
	</delete>
	<update id="update" parameterType="JSMessageSend">
		update j_s_log 
		<trim prefix="set" suffixOverrides=",">
		</trim>
		<where>id = #{id}</where>
	</update>
	<!-- 修改记录状态 -->
	<update id="updateStatus" parameterType="map">
		update j_s_message_send set status=#{status}
		<where>id = #{id}</where>
	</update>
	<select id="findById" resultMap="jSMessageSendResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from j_s_message_send
		where id = #{id}
	</select>
	<select id="count" resultType="int" parameterType="String" >
		select count(*)
		from j_s_message_send
		where sendUserId = #{id}
	</select>
	
	<select id="queryAll" resultMap="jSMessageSendResultMap">
		select <include refid="table_columns" /> 
		from j_s_message_send
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
		</trim>
	</sql>
	
	<!-- 获取对象列表(分页)-->
	<select id="pagerList" resultMap="jSMessageSendResultMap" parameterType="PagerInfo">
		select <include refid="table_columnsas" />
		from <include refid="tableasname" />
		left join j_s_message jsm
		on jsms.messageId=jsm.id
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>
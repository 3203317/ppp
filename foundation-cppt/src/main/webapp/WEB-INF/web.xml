<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>cppt</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:config/spring-conf/applicationContext-dataSource.xml;
			classpath*:config/spring-conf/dataAccessContext-hibernate.xml;
			classpath*:config/spring-conf/application-mvc-base.xml;
        </param-value>
	</context-param>

	<!-- log4j config -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
</web-app>
